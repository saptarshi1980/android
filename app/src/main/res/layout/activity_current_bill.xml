<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dpl1.saptarshi.CurrentBill">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView14"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/logo2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder"
        android:id="@+id/rl"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumer Name:"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Period: "
            android:id="@+id/textView5"
            android:layout_below="@+id/textView3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Reading: "
            android:id="@+id/textView8"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5" />

        <TextView
            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Reading"
            android:id="@+id/textView9"
            android:textStyle="bold"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multiplying Factor"
            android:id="@+id/textView10"
            android:textStyle="bold"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meter Status"
            android:textStyle="bold"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit Per Month"
            android:id="@+id/textView12"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="1dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Amount Per Month "
            android:id="@+id/textView13"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView12"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            />

        <TextView

            android:layout_marginTop="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Due Date"
            android:id="@+id/textView"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
             />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Due Date"
            android:id="@+id/textViewdue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="5.0dip"
        android:layout_marginBottom="20.0dip"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Bill"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView14"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_above="@+id/rl"
        android:src="@drawable/download"
        android:layout_below="@+id/imageView14"
        android:layout_alignRight="@+id/rl"
        android:layout_alignEnd="@+id/rl"
        android:clickable="true" />


</RelativeLayout>
